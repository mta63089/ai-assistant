{
  "compilerOptions": {
    "target": "esnext",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "strict": true,
    "lib": ["es2022", "es2020", "es2018", "es2017", "es7", "es6", "es5"]
  },
  "include": ["**/*.ts"],
  "exclude": ["**/dist", "node_modules"]
}
