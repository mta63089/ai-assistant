{
  "compilerOptions": {
    "isolatedModules": true,
    "composite": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["es2022", "es2020", "es2018", "es2017", "es7", "es6", "es5"],
    "declaration": false /* Generate .d.ts files from TypeScript and JavaScript files in your project. */,
    "declarationMap": false,
    "sourceMap": true,
    "allowJs": true,
    "incremental": false,
    "checkJs": true
  },
  "exclude": ["**/dist"]
}
